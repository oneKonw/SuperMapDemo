<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.myapplication.first.MainActivity">
    <RelativeLayout
        android:id="@+id/rv_mapview"
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <com.supermap.mapping.MapView
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_height="300dp">
        </com.supermap.mapping.MapView>
        <ZoomControls
            android:id="@+id/zoomControls"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/map_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </ZoomControls>
    </RelativeLayout>

    <com.supermap.mapping.view.LayerListView
        android:id="@+id/layerView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/rv_mapview">
    </com.supermap.mapping.view.LayerListView>
    <LinearLayout
        android:layout_below="@id/layerView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_showall"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:text="整幅显示"
            android:gravity="center"
            android:background="#2222"/>
        <RelativeLayout
            android:id="@+id/tb_search"
            android:background="@drawable/toolbar_selector"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="6dp"
            android:paddingTop="6dp"
            android:paddingRight="6dp"
            android:paddingBottom="2dp"
            android:layout_margin="6dp">
            <TextView
                android:id="@+id/txt_selectContinent"
                android:layout_alignParentLeft="true"
                android:layout_height="40dip"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textColor="#FF000000"
                android:text="查询条件"/>
            <ImageButton
                android:src="@drawable/select"
                android:id="@+id/btn_selectGeo"
                android:layout_alignParentRight="true"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <Button
                android:id="@+id/btn_search"
                android:layout_toLeftOf="@+id/btn_selectGeo"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:text="查询"/>
            <Spinner
                android:id="@+id/spn_select_continent"
                android:layout_toRightOf="@+id/txt_selectContinent"
                android:layout_toLeftOf="@+id/btn_search"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
